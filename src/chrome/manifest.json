{
    "manifest_version": 2,
    "name": "BingeBox",
    "description": "Use psychic powers to sync videos and chat with friends",
    "version": "0.0.0.1",
    "icons": {
      "16": "img/16.png",
      "48": "img/48.png",
      "128": "img/128.png"
    },
    "content_scripts": [
        {
          "matches": ["*://*.primevideo.com/*"],
          "js": ["js/content.js"]
        },
        {
          "matches": ["*://*.netflix.com/*"],
          "js": ["js/contentNetflix.js"]
        }
    ],
    "background": {
      "persistent": false,
      "scripts": ["js/background.js"]
    },
    "browser_action": {
      "default_icon": {                    
        "16": "img/16.png"
      },
      "default_title": "BingeBox"      
    },
    "permissions": ["storage"]
  }